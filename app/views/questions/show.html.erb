<div class="lead well">
<h2><%= @question.email %></h2>
<h3><%= @question.body %></h3>
</div>

<%= render 'home/new_answer' %>

<ul class="media-list">
  <% @answers.each do |answer| %>
  <li class="media">
    <div class="media-left">
      <img class="media-object" src="../assets/aIcon.jpg" alt="Answer">
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= answer.email %></h4>
      <div class="time-stamp"><small><%= time_ago_in_words answer.created_at %></small></div>
      <%= answer.body %>
    </div>
  </li>
  <% end %>
</ul>

<% if @answers.empty? %>
<div class="alert alert-info">Nothing here yet</div>
<% end %>

<button class="btn btn-danger" data-toggle="modal" data-target="#new-answer">
Add an answer
</button>
